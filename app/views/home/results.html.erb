<p>
  Concerts in <%= @city_date.city %> on <%= @city_date.date %>
</p>

<% @events.each do |event| %>
  <div id="event-wrapper-<%= event.id %>">
      <% event.artists.each do |artist| %>
        <div id="artist-wrapper-<%= artist.id %>">
          <%= artist.name %>
          <audio id="audio-<%=artist.id%>" src="<%=artist.song_preview%>"></audio>
          <span id="play-btn-<%=artist.id%>" class="glyphicon glyphicon-play" aria-hidden="true"></span>
          <span id="pause-btn-<%=artist.id%>" class="glyphicon glyphicon-pause" aria-hidden="true"></span>
          <br>
        </div>
      <% end %>
        <div class="venue-name">
          <%= event.venue_name %>
        </div>
        <div class="event-time">
          <%= event.datetime %>
        </div>
        <div class="buy-tickets">
          <a href="<%= event.ticket_url %>" class="btn btn-primary">Get Tickets</a>
        </div>
  </div>
<% end %>

